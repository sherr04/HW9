{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Airport Operations" },
    "width": 800,
	"height": 400,
    "params": [
        {
            "name": "operation_selection",
            "bind": {
                "input": "select",
                "options": [null, "landing", "takeoff"],
                "labels": ["Show All", "Landing", "Takeoff"],
                "name": "Operation Selection: "
            }
        }
    ],
    "data": {
        "url": "MY.csv"
    },
    "encoding": {
        "x": { "aggregate": "count", "field": "operation", "type": "quantitative", "title": "Count" },
        "y": { "field": "name", "type": "nominal", "title": "Airport" },
        "color": { 
            "field": "operation",
            "type": "nominal",
            "scale": {
                "domain": ["landing", "takeoff"],
                "range": ["#1f77b4", "#ff7f0e"]
            },
            "title": "Operation"
        }
    },
    "layer": [
        {
            "mark": { "type": "bar" },
            "encoding": {
                "tooltip" : [
                    {
                        "field": "name",
                        "type": "nominal",
                        "title": "Airport"
                    },
                    {
                        "field": "operation",
                        "aggregate": "count",
                        "type": "quantitative",
                        "title": "Count"
                    }
                ]
            },
            "transform": [
                { "filter": "operation_selection == null || datum.operation == operation_selection" }
            ]
        },
        {
            "mark": { "type": "text", "align": "left", "baseline": "bottom", "dx": 3 },
            "encoding": {
                "text": { "aggregate": "count", "field": "operation", "type": "quantitative" },
                "color": { "value": "black" }
            },
            "transform": [
                { "filter": "operation_selection == null || datum.operation == operation_selection" }
            ]
        }
    ]
}
